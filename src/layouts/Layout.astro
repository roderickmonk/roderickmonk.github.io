---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

const { title = "Math & Computer Studies" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<title>{title}</title>
</head>

<body class="min-h-screen text-slate-900">

<div class="grid-background"></div>

<header class="border-b border-slate-300 bg-gradient-to-r from-slate-50 to-blue-50">
<div class="mx-auto flex max-w-5xl items-center justify-between px-4 py-5">

<div>
<div class="text-lg font-semibold">
<a href="/" class="hover:text-blue-700">
Math & Computer Studies
</a>
</div>

<div class="text-sm text-slate-700">
Senior High School
</div>
</div>

<Nav />

</div>
</header>

<main class="mx-auto max-w-5xl px-4 py-10">
<slot />
</main>

<Footer />

</body>
</html>